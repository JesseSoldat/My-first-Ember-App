<h2 id="title">Welcome to Ember JS Style</h2>

<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    <input type="text" id="new-todo" placeholder="What needs to be done?" />
  </header>

  <section id="main">
    <ul id="todo-list">

      <li class="completed">
        <input type="checkbox" class="toggle">
        <label>Learn Ember.js</label>
        <button class="destroy">Done</button>
      </li>

      <li>
        <input type="checkbox" class="toggle">
        <label>Learn Node.js</label>
        <button class="destroy">Done</button>
      </li>

       <li> 
          <input type="checkbox" class="toggle">
          <label>Learn React.js</label>
          <button class="destroy">Done</button>
      </li>
    </ul>
    <input type="checkbox" id="toggle-all">
          <label>All</label>
  </section>

  <footer id="footer">
    <span id="todo-count">
      <strong>3</strong> todos left
    </span>
    <ul id="filters">
      <li>
        <a href="all" class="selected">All</a>
      </li>
      <li>
        <a href="active">Active</a>
      </li>
      <li>
        <a href="completed">Completed</a>
      </li>
    </ul>
    <button id="clear-completed">
      Clear completed (1)
    </button>
  </footer>
</section>
<footer id="info">
  <p>Double-click to edit a todo</p>
</footer>

{{outlet}}
